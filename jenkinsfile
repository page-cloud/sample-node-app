pipeline {
    agent any
    stages{
        stage('Build Docker Image'){
            steps{
                sh "docker build . -t mdrajibkhan/nodeapp:v1 "
            }
        }
		stage('Push Image to Docker Hub'){
			steps{
				withCredentials([string(credentialsId: 'dockerhubPWD', variable: 'dockerhubPWD')]) {
					sh "docker login -u mdrajibkhan -p ${dockerhubPWD}"
					sh "docker push mdrajibkhan/nodeapp:v1"
				}
			}
		}
		stage('Login to stating server') {
            steps {
                sshagent(['login-to-minikube']) {
		     sh 'scp -o StrictHostKeyChecking=no pods.yaml services.yaml ubuntu@192.168.0.120:/home/ubuntu/'
                    }
            }
        }
   }
}
